    }
  ],
  "shortcuts": [
    {
      "name": "Marketplace",
      "short_name": "Market",
      "description": "Buy and sell agricultural produce",
      "url": "/#market"
    },
    {
      "name": "Crop Info",
      "short_name": "Crops",
      "description": "Browse crop information",
      "url": "/#crops"
    },
